<Window x:Class="RealD_Helpdesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealD_Helpdesk"
        mc:Ignorable="d"
        Title="RealD Helpdesk" Height="520" Width="569" ResizeMode="NoResize" Icon="Pics/Help.ico">
    <Grid Background="#FFB9B1B1" Margin="0,0,0,-18">
        <Button Content="" HorizontalAlignment="Center" Margin="155,0,138,35" VerticalAlignment="Bottom" Width="270" Click="Button_Click" Height="65" ForceCursor="True" TabIndex="11">
            <Button.Background>
                <ImageBrush ImageSource="Pics/Submit-Button-Transparent-PNG.png"/>
            </Button.Background>
        </Button>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45"/>
        <Label Content="Location:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="60"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top" Width="45"/>
        <Label Content="Category:" HorizontalAlignment="Left" Margin="145,172,0,0" VerticalAlignment="Top" Width="60"/>
        <Label Content="Issue:" HorizontalAlignment="Left" Margin="365,10,0,0" Width="60" VerticalAlignment="Top"/>
        <Label Content="Resolution:" HorizontalAlignment="Left" Margin="80,229,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" SpellCheck.IsEnabled="True" TabIndex="1"/>
        <RichTextBox x:Name="IssueBox" HorizontalAlignment="Left" Height="180" Margin="255,41,0,0" VerticalAlignment="Top" Width="296" SpellCheck.IsEnabled="True" TabIndex="9">
            <FlowDocument/>
        </RichTextBox>
        <Label Content="Priority:" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="60"/>
        <Label Content="Ticket number:" HorizontalAlignment="Left" Margin="135,118,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Phone:" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="PhoneBox" HorizontalAlignment="Left" Height="23" Margin="125,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" SpellCheck.IsEnabled="True" TabIndex="2"/>
        <Label Content="CC:" HorizontalAlignment="Left" Margin="155,64,0,0" VerticalAlignment="Top" Width="30"/>
        <ComboBox x:Name="LocationBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="100" Height="23" TabIndex="3">
            <ComboBoxItem Content="Boulder"/>
            <ComboBoxItem Content="Bevery Hills"/>
            <ComboBoxItem Content="Beijing"/>
            <ComboBoxItem Content="Hong Kong"/>
            <ComboBoxItem Content="Korea"/>
            <ComboBoxItem Content="London"/>
            <ComboBoxItem Content="Moscow"/>
            <ComboBoxItem Content="Oxford"/>
            <ComboBoxItem Content="Shanghai"/>
            <ComboBoxItem Content="Taiwan"/>
            <ComboBoxItem Content="Tokyo"/>
        </ComboBox>
        <ComboBox x:Name="PriorityBox" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Width="100" Height="23" TabIndex="5">
            <ComboBoxItem Content="High"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Low"/>
        </ComboBox>
        <TextBox x:Name="TicketBox" HorizontalAlignment="Left" Height="23" Margin="125,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" SpellCheck.IsEnabled="True" TabIndex="6"/>
        <ComboBox x:Name="StatusBox" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="100" Height="23" TabIndex="7">
            <ComboBoxItem Content="New"/>
            <ComboBoxItem Content="Opened"/>
            <ComboBoxItem Content="Reopened"/>
            <ComboBoxItem Content="Closed"/>
        </ComboBox>
        <RichTextBox x:Name="ResolutionBox" HorizontalAlignment="Left" Height="110" Margin="10,255,0,0" VerticalAlignment="Top" Width="225" SpellCheck.IsEnabled="True" TabIndex="10">
            <FlowDocument/>
        </RichTextBox>
        <ComboBox x:Name="CategoryBox" HorizontalAlignment="Left" Margin="125,198,0,0" VerticalAlignment="Top" Width="110" Height="23" TabIndex="8">
            <ComboBoxItem Content="Account::AD Change"/>
            <ComboBoxItem Content="Account::Password reset"/>
            <ComboBoxItem Content="Autonomy"/>
            <ComboBoxItem Content="Email"/>
            <ComboBoxItem Content="Filesite"/>
            <ComboBoxItem Content="Hardware"/>
            <ComboBoxItem Content="IT PRK"/>
            <ComboBoxItem Content="IT URF"/>
            <ComboBoxItem Content="Software"/>
            <ComboBoxItem Content="MAS500"/>
            <ComboBoxItem Content="Network"/>
            <ComboBoxItem Content="Phone::Desk"/>
            <ComboBoxItem Content="Phone::Mobile"/>
            <ComboBoxItem Content="Printer"/>
            <ComboBoxItem Content="RealD Life"/>
            <ComboBoxItem Content="Security Badge"/>
            <ComboBoxItem Content="VPN"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>
        <TextBox x:Name="CCBox" HorizontalAlignment="Left" Height="23" Margin="125,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" SpellCheck.IsEnabled="True" TabIndex="6"/>
        <Label Content="Attachment:" HorizontalAlignment="Left" Margin="365,229,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="Attachment1" HorizontalAlignment="Left" Height="105" Margin="255,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>

    </Grid>
</Window>
